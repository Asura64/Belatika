{% extends "layout.html.twig" %}
{% block title %}{{ 'profile.edit.title'|trans }}{% endblock %}
{% block meta_title %}{{ 'profile.edit.title'|trans }}{% endblock %}

{% block content %}
    <div class="container my-3">
        <div class="row pb-5">
            <div class="col-12 p-2 mt-3">
                {{ form_start(form, { 'action': path('security_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit mt-3' } }) }}
                <div class="form-group row">
                    {{ form_label(form.pseudo, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.pseudo, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.email, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.current_password, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
                    <div class="col-sm-8">
                        {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <a href="{{ path('security_password_change') }}">({{ 'change_password.submit'|trans }})</a>
                <div>
                    <input class="btn btn-sm bt-btn--secondary float-right" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}
