{% trans_default_domain 'FOSUserBundle' %}

<div class="container my-3">
    <div class="row">
        {% if error %}
            <p class="alert alert-danger text-center col-12">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        {% endif %}
        <p class="alert alert-bt-info text-center col-12">{{ 'Afin de passer votre commande, vous devez vous identifier.'|gTrans }}</p>
    </div>

    <div class="row d-flex justify-content-between pb-5">
        <div class="flex-grow-1 mr-2 d-flex flex-column justify-content-between align-items-xl-start">
            <h2>{{ 'Me connecter avec mon réseau social'|gTrans }}:</h2>
            <p>{{ 'Connectez-vous d\'un simple clic en utilisant le réseau social de votre choix'|gTrans }}:</p>
            <div class="d-flex flex-column align-self-center align-self-xl-auto">
                <a class="btn btn-social btn-facebook my-2" href="{{ path('connect_facebook_start') }}">
                    <i class="fab fa-facebook-f"></i> {{ 'Se connecter avec Facebook'|gTrans }}
                </a>
                <a class="btn btn-social btn-google" href="{{ path('connect_google_start') }}">
                    <i class="fab fa-google"></i> {{ 'Se connecter avec Google'|gTrans }}
                </a>
            </div>
        </div>
        <div class="flex-grow-1 ml-2 d-flex flex-column justify-content-between">
            <h2>{{ 'Me connecter avec mes identifiants'|gTrans }} :</h2>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label" for="username">{{ 'security.login.username'|trans }}</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-6 col-form-label" for="password">{{ 'security.login.password'|trans }}</label>
                    <div class="col-sm-6">
                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <a class="btn btn-secondary btn-belatika-dark" href="{{ path('fos_user_resetting_request') }}">{{ 'Mot de passe oublié'|gTrans }}</a>
                    </div>
                    <div class="col-sm-6 mt-2 mt-sm-0">
                        <input class="btn btn-belatika-dark float-sm-right" type="submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>