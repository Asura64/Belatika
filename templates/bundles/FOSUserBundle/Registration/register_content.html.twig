{% trans_default_domain 'FOSUserBundle' %}

<div class="container my-3">
    <div class="row">
        <p class="col-12 alert alert-bt-info">
            {{ 'Pas encore inscrit? Nous vous invitons à vous inscrire afin de passer votre commande.'|gTrans }}<br>
            {{ 'Créez votre compte à l\'aide du formulaire, ou inscrivez-vous en un seul clic avec votre réseau social habituel.'|gTrans }}
        </p>
    </div>

    <div class="row d-flex justify-content-between pb-5">
        <div class="flex-grow-1 mr-2 d-flex flex-column align-items-xl-start">
            <h2>{{ 'Inscription rapide :'|gTrans }}</h2>
            <div class="d-flex flex-column align-self-center align-self-xl-auto">
                <a class="btn btn-social btn-facebook my-2" href="{{ path('connect_facebook_start') }}">
                    <i class="fab fa-facebook-f"></i> {{ 'S\'inscrire avec Facebook'|gTrans }}
                </a>
                <a class="btn btn-social btn-google" href="{{ path('connect_google_start') }}">
                    <i class="fab fa-google"></i> {{ 'S\'inscrire avec Google'|gTrans }}
                </a>
            </div>
        </div>
        <div class="flex-grow-1 ml-2 d-flex flex-column justify-content-between">
            <h2>{{ 'Créer un nouveau compte'|gTrans }} :</h2>
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register')}) }}
            <div class="form-group row">
                {{ form_label(form.email, null, { label_attr: { 'class' : 'col-sm-4 col-form-label' } }) }}
                <div class="col-sm-8">
                    {{ form_widget(form.email, { attr: { 'class' : 'form-control', 'placeholder' : 'form.email'|trans } }) }}
                </div>
                <div class="form-error">{{ form_errors(form.email) }}</div>
            </div>
            <div class="form-group row">
                {{ form_label(form.username, null, { label_attr: { 'class' : 'col-sm-4 col-form-label' } }) }}
                <div class="col-sm-8">
                    {{ form_widget(form.username, { attr: { 'class' : 'form-control', 'placeholder' : 'form.username'|trans } }) }}
                </div>
                <div class="form-error">{{ form_errors(form.username) }}</div>
            </div>
            <div class="form-group row">
                {{ form_label(form.plainPassword.first, null, { label_attr: { 'class' : 'col-sm-4 col-form-label' } }) }}
                <div class="col-sm-8">
                    {{ form_widget(form.plainPassword.first, { attr: { 'class' : 'form-control', 'placeholder' : 'form.password'|trans } }) }}
                </div>
                <div class="form-error">{{ form_errors(form.plainPassword.first) }}</div>
            </div>
            <div class="form-group row mb-0">
                {{ form_label(form.plainPassword.second, null, { label_attr: { 'class' : 'col-sm-4 col-form-label' } }) }}
                <div class="col-sm-8">
                    {{ form_widget(form.plainPassword.second, { attr: { 'class' : 'form-control', 'placeholder' : 'form.password_confirmation'|trans } }) }}
                </div>
                <div class="form-error">{{ form_errors(form.plainPassword.second) }}</div>
            </div>
            <div class="float-right my-2">
                <button type="submit" class="btn bt-btn--primary" >{{ 'registration.submit'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>