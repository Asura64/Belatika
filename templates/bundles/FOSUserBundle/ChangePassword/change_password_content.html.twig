{% trans_default_domain 'FOSUserBundle' %}

<div class="container my-3">
    <div class="row pb-5">
        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password mt-3 col-12' } }) }}
        <div class="form-group row">
            {{ form_label(form.current_password, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            {{ form_row(form.current_password) }}
        </div>
        <div class="form-group row">
            {{ form_label(form.plainPassword.first, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            {{ form_row(form.plainPassword.first) }}
        </div>
        <div class="form-group row">
            {{ form_label(form.plainPassword.second, '', {'label_attr' : {'class' : 'col-sm-4 col-form-label'}}) }}
            <div class="col-sm-8">
                {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            {{ form_row(form.plainPassword.second) }}
        </div>
        <div>
            <input class="btn btn-sm bt-btn--secondary float-right" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>