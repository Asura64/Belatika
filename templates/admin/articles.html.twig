{% extends shop_settings.template ~ "/layout.html.twig" %}
{% block title %}Articles{% endblock %}
{% block content %}
    <h1 class="col-12">Articles</h1>

    <form class="col-12" method="post">
        <div class="row">
            <table class="col-12">
                <tr>
                    <th></th>
                    <th>Référence</th>
                    <th>Aperçu</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Créé le</th>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td colspan="4"><a class="belatika-link" href="{{ path('app_admin_additem') }}"><i class="far fa-plus-square"></i> Ajouter un article</a></td>
                </tr>
                {% for item in items %}
                    <tr>
                        <td><label class="sr-only" for="item-{{ item.id }}">Sélectionner</label><input type="checkbox" id="item-{{ item.id }}" name="item-{{ item.id }}"></td>
                        <td>{{ item.reference }}</td>
                        <td><img src="{% if item.images|first.webPath is onDisk %}{{ asset(item.images|first.webPath|imagine_filter('icon')) }}{% else %}{{ asset('img/resources/image-not-found.png'|imagine_filter('icon')) }}{% endif %}" alt="{{ item.images|first.alt }}"></td>
                        <td><a class="belatika-link" target="_blank" href="{{ path('app_shop_item', {'category_slug' : item.category.slug, 'customer' : item.category.customers, 'slug' : item.slug}) }}">{{ item.name }}</a></td>
                        <td>{{ item.price }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.createdAt|date('d/m/Y à H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        {{ include('modules/pagination.html.twig') }}
        <label for="action">Avec la sélection :</label>
        <select name="action" id="action">
            <option value="delete">Supprimer</option>
        </select>
        <input type="submit" onclick="return confirm('Supprimer définitivement?')">
    </form>
{% endblock %}