{#            <div class="btheader__tools__item">#}
{#                <a title="Administration" href="{{ path('app_admin_index') }}"><i class="fas fa-tools"></i></a>#}
{#            </div>#}
{#        {% endif %}#}
</header>
{% if title is defined %}
    <h1 class="heading">{{ title }}</h1>
{% endif %}