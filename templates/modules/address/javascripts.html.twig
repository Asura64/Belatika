{% block javascripts %}
    <script src="{{ asset('js/leaflet.js') }}"></script>
    <script src="{{ asset('js/places.js') }}"></script>
    <script src="{{ asset('js/Address.js') }}"></script>
    <script>
        $(function () {
            let address = new Address(
                '{{ env('ALGOLIA_PLACES_ID') }}',
                '{{ env('ALGOLIA_PLACES_KEY') }}',
                ['delivery', 'billing'],
                '{{ app.request.getSchemeAndHttpHost ~ asset('img/') }}'
                    {% if app.user.deliveryAddress and app.user.deliveryAddress.lat and app.user.deliveryAddress.lng %}
                , {
                    lat: {{ app.user.deliveryAddress.lat }},
                    lng: {{ app.user.deliveryAddress.lng }}
                }
                    {% endif %}
            );
            address.init();
        });
    </script>
{% endblock %}