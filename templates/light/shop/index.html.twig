    {% endif %}

    <section>
        <h2 class="hidden">{{ 'Les gammes'|gTrans }}</h2>
        <div class="shop-ranges">
            {% for range in ranges %}
                <figure class="ranges-preview ranges-preview--ranges">
                    <figcaption class="ranges-preview__figcaption">{{ range.name|gTrans }}</figcaption>
                    <a href="{{ path('app_shop_range', {'slug':range.slug}) }}"><img class="ranges-preview__image" src="{{ asset(range.imageWebPath)|imagine_filter('large') }}" alt="{{ range.name|gTrans }}"></a>
                </figure>
            {% endfor %}
        </div>
    </section>

    <section class="text-center">
        <p class="displayer">
            <span class="displayer__text">{{ 'LIVRAISON OFFERTE'|gTrans }}!</span><br>
            <span class="displayer__text">
                {{ 'Un bijou surprise gliss√© dans votre commande!'|gTrans }}
            </span>
        </p>
    </section>

    <section>
        <h2 class="hidden">{{ 'Les cat√©gories'|gTrans }}</h2>
        <div class="shop-ranges categories">
            {% for category in categories %}
                <figure class="ranges-preview ranges-preview--categories">
                    <figcaption class="ranges-preview__figcaption">{{ category.name|gTrans }}{% if category.customers == 'homme' %} homme{% endif %}</figcaption>
                    <a href="{{ path('app_shop_category', {'customer' : category.customers, 'slug' : category.slug}) }}"><img class="ranges-preview__image" src="{{ asset(category.imageWebPath)|imagine_filter('large') }}" alt="{{ category.name|gTrans }}"></a>
                </figure>
            {% endfor %}
        </div>
    </section>

    <hr class="separator separator--left">

    <section class="mb-5">
        <h2 class="mb-3">{{ 'Les derni√®res nouveaut√©s'|gTrans }}</h2>
        <div id="carousel" class="slider">
            {% for sliderItem in sliderItems %}
                <figure class="slider__item">
                    <a href="{{ path('app_shop_item', {'customer' : sliderItem.category.customers, 'category_slug' : sliderItem.category.slug, 'slug' : sliderItem.slug}) }}">
                        <img class="img-responsive" src="{{ sliderItem.images|first.webPath|imagine_filter('slide') }}" alt="{{ sliderItem.images|first.alt }}">
                    </a>
                </figure>
            {% endfor %}
        </div>
    </section>

    <hr class="separator separator--right">

    <section class="about">
        <h2>Belatika {{ "bijoux"|gTrans }}</h2>
        <article>
            <p class="about__intro">{{ "Belatika, ce sont des bijoux chics et modernes qui suivent la tendance."|gTrans }}</p>
            <figure class="about__image">
                <img src="{{ asset('img/resources/belatika_profile.jpg') }}" alt="{{ 'Profil cr√©atrice bijoux tendance Belatika'|gTrans }}">
            </figure>
            <p class="about__paragraph">{{ "En portant nos <strong>bijoux</strong> vous vous d√©marquez et vous montrez votre personnalit√©."|gTrans }}</p>
            <p class="about__paragraph">{{ "Que vous aimiez le sobre, le chic, l‚Äô√©tincelant, ou le lumineux, le d√©cal√©, ou l‚Äôextravagance, un bijou Belatika est fait pour vous."|gTrans }}</p>
            <p class="about__paragraph">{{ "Ils sont r√©alis√©s en <strong>un seul exemplaire ou petite s√©rie</strong> pour garder un c√¥t√© <strong>unique et privil√©gi√©</strong>."|gTrans }}</p>
