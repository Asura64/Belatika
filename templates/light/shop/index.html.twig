    <meta name="description" content="{{ "D√©couvrez les bijoux chics et modernes de la boutique Belatika. Des bijoux tendances qui se portent au quotidien."|gTransDB }}">
    {{ encore_entry_script_tags('app_shop_index') }}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ absolute_url(path('app_shop_index')) }}">
    <meta property="og:title" content="{{ 'Bijoux tendance'|gTrans }}">
    <meta property="fb:app_id" content="1293327757393160">
    <meta property="og:description" content="{{ "D√©couvrez les bijoux chics et modernes de la boutique Belatika. Des bijoux tendances qui se portent au quotidien."|gTransDB }}">
    <meta property="og:image" content="{{ app.request.getSchemeAndHttpHost() ~ asset('img/resources/open_graph_home.jpg') }}">
