{% extends shop_settings.template ~ "/layout.html.twig" %}
{% set cart = app.session.get('cart') %}
{% block meta_title %}{{ item.name|gTrans }}{% endblock %}
{% block title %}{{ item.name|gTrans }}{% endblock %}
{% block head %}
    <link
            rel="canonical"
            href="{{ absolute_url(
                path(
                    'app_shop_item',
                    {
                        'customer' : item.category.customers,
                        'category_slug' : item.category.slug,
                        'slug' : item.slug
                    })
            ) }}"
    >
    <meta name="description" content="{{ item.metaDescription|gTrans }}">
    <link rel="stylesheet" href="{{ asset('css/item-carousel.css') }}">
{% endblock %}
{% block content %}
    <div class="item">
        <div class="item__border"></div>
        <div class="item__aside">
            <div class="item__aside__image">
                {% if item.images|length == 1 %}
                    <figure>
                        <img src="{{ asset(item.images|first.webPath|imagine_filter('large')) }}" alt="{{ item.images|first.alt }}">
                    </figure>
                {% else %}
                    {{ include(shop_settings.template ~ '/modules/item-carousel.html.twig') }}
                {% endif %}
            </div>
            <div class="item__aside__price">
                {% if item.discount and onSales %}
                    <span class="item__aside__price__value--discount">-{{ item.discount }}%</span>
                    <span class="item__aside__price__value--original">{{ item.price|number_format(2, ',') }}€</span>
                    <span class="item__aside__price__value">{{ item.discountPrice|number_format(2, ',') }}€</span>
                {% else %}
                    <span class="item__aside__price__value"> {{ item.price|number_format(2, ',') }}€ </span>
                {% endif %}
            </div>
            <div class="item__aside__reference">{{ 'Référence'|gTrans }} n°{{ item.reference }}</div>
            <div class="item__aside__footer">
                {% if not item.quantity %}
                    <p>{{ 'Cet article n\'est plus disponible'|gTrans }}</p>
                {% else %}
                    <button
                            id="cart-button-{{ item.id }}"
                            class="bt-btn bt-btn--primary bt-btn--block cart-button"
                            data-item_id="{{ item.id }}"
                            data-add_item_url="{{ absolute_url(path('app_cart_add', {'id':item.id})) }}"
                            data-remove_item_url="{{ absolute_url(path('app_cart_remove', {'item_id':item.id})) }}"
                            {% if cart[item.id] is defined %}data-added{% endif %}
                    >
                        <span class="add-item{% if cart[item.id] is defined %} hidden{% endif %}">{{ 'Ajouter au panier'|gTrans }}</span>
                        <span class="remove-item{% if cart[item.id] is not defined %} hidden{% endif %}">{{ 'Retirer du panier'|gTrans }}</span>
                        <i class="fas fa-spinner hidden"></i>
                    </button>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_updateitem', {'id' : item.id}) }}" class="bt-btn bt-btn--primary">Modifier</a>
                {% endif %}
            </div>
        </div>
        <div class="item__description">
            <div class="item__description__content">{{ item.description|raw|gTrans }}</div>
        </div>
        <div class="item__border"></div>
    </div>

{% endblock %}