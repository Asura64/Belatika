<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <title>{% block meta_title %}{% endblock %} - Belatika</title>
    <link rel="icon" href="{{ asset('favicon.ico') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous"><link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    {{ encore_entry_link_tags('app') }}
    {% block head %}{% endblock %}
</head>
<body>
<div class="btcontainer">
    {% include shop_settings.template ~ '/modules/header.html.twig' with {title: block('title')} %}
    <div class="container d-flex flex-column align-items-center">
        {{ flashAlert() }}
    </div>
    {% block content %}{% endblock %}
    {% include shop_settings.template ~ '/modules/footer.html.twig' %}
</div>
{{ encore_entry_script_tags('app') }}
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
